<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_on_off"
        android:title="@string/pref_on_off"
        android:summary="@string/pref_on_off_summary"
        android:defaultValue="false"
    />
    <ListPreference
        android:key="language"
        android:title="@string/pref_language"
        android:dialogTitle="@string/pref_language_dialog"
        android:summary="@string/pref_list_summary"
        android:entries="@array/pref_language_entries"
        android:entryValues="@array/pref_language_values"
        android:defaultValue="@string/lang_default"
        />
</PreferenceScreen>